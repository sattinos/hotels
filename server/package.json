{
  "name": "hotel-backend",
  "version": "1.0.2",
  "description": "backend of the application",
  "author": "Mahmoud AlSati <mahmoud.alsati@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "./node_modules/.bin/ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "clean:web-client": "rimraf data/public/admin",
    "migration:gen": "ts-node ./node_modules/.bin/typeorm migration:generate -n queries",
    "migration:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:contents": "jest src/contents-tool",
    "test:user": "jest src/user",
    "test:flat": "jest src/flat",
    "test:flatType": "jest src/flat-type",
    "test:flatTypeService": "jest src/flat-type/flat-type.service.spec.ts",
    "test:reservation": "jest src/reservation/reservation.service.spec.ts",
    "test:reserved-flat": "jest src/reserved-flat/reserved-flat.service.spec.ts",
    "test:otp-service": "jest src/otp/otp.service.spec.ts --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/typeorm": "^5.2.2",
    "connect-typeorm": "^1.1.0",
    "dateformat": "^3.0.3",
    "express-session": "^1.15.6",
    "file-stream-rotator": "^0.4.1",
    "fs-extra": "^7.0.1",
    "multer": "^1.4.1",
    "otp-generator": "^1.1.0",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typeorm": "^0.2.13",
    "typeorm-static": "^1.1.0",
    "typescript": "^3.0.1",
    "axios": "^0.18.0",
    "morgan": "^1.9.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.8.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.122",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "keywords": [
    "nest.js",
    "nestjs",
    "hotel",
    "cms",
    "booking"
  ]
}
